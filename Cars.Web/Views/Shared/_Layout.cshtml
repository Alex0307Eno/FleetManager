@using Microsoft.AspNetCore.Mvc.Rendering
@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper Html

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    Func<string, string, bool> isActive = (ctrl, act) =>
    {
        if (!string.IsNullOrEmpty(act))
            return string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase) &&
                   string.Equals(currentAction, act, StringComparison.OrdinalIgnoreCase);
        return string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase);
    };
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title >@ViewData["Title"] - 公務車派車系統</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="topbarnav navbar navbar-expand-lg navbar-light bg-light shadow-sm sticky-top">
        <div class="container-fluid">

            @* 左邊 Logo  *@
            @if (User.IsInRole("Admin") )
            {
                <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">
                    公務車派車系統
                </a>
            }
            else
            {
                <span class="navbar-brand fw-bold text-white opacity-75">公務車派車系統</span>
            }


            @* 右邊選單  *@
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    @if (User.IsInRole("Admin"))
                    {
                        @*常用地點*@
                        @* <li class="nav-item">
                            <a class="nav-link @(isActive("Places", "Place") ? "is-active" : "")"
                               href="/Places/Place">常用地點</a>
                        </li> *@
                        @* 派車管理 *@
                        <li class="nav-item">
                            <a class="nav-link @(isActive("Dispatches", "Dispatch") ? "is-active" : "")"
                            href="/Dispatches/Dispatch">用車申請</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(isActive("Dispatches", "Record") ? "is-active" : "")"
                            href="/Dispatches/Record">派車紀錄</a>
                        </li>

                        @* 駕駛人管理 *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">駕駛員管理</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Drivers/Schedule">值勤排班</a></li>
                                <li><a class="dropdown-item" href="/Drivers/LeaveReview">請假審核</a></li>
                                <li><a class="dropdown-item" href="/Drivers/Index">駕駛員基本資料</a></li>
                                <li><a class="dropdown-item" href="/Agents/Index">代理人員</a></li>
                            </ul>
                        </li>

                        @* 車輛管理 *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">車輛管理</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Vehicles/Maintenance">車輛維護</a></li>
                                <li><a class="dropdown-item" href="/Vehicles/FuelStats">油耗統計</a></li>
                                <li><a class="dropdown-item" href="/Vehicles/Statistics">行車歷程統計</a></li>
                            </ul>
                        </li>
                    }

                    @if (User.IsInRole("Driver"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(isActive("Dispatches", "Record") ? "is-active" : "")"
                            href="/Dispatches/Record">派車紀錄</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">駕駛員管理</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-area="Driver" asp-controller="Drivers" asp-action="MySchedule">
                                        值勤排班
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Driver" asp-controller="Drivers" asp-action="LeaveApply">
                                        請假申請
                                    </a>
                                </li>
                            </ul>
                        </li>

                    }
                    @if (User.IsInRole("Applicant"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(isActive("Dispatches", "Dispatch") ? "is-active" : "")"
                            href="/Dispatches/Dispatch">用車申請</a>
                        </li>
                    }
                    @if (User.IsInRole("Manager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(isActive("Dispatches", "Dispatch") ? "is-active" : "")"
                               href="/Dispatches/Dispatch">用車申請</a>
                        </li>
                    }

                    
                    <!-- 登入/登出 -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                👤 @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (User.IsInRole("Admin") || (User.IsInRole("Applicant") || (User.IsInRole("Manger"))))
                                {
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">個人資料</a></li>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link"asp-controller="Users" asp-action="Index">使用者管理</a>
                                    </li>
                                }

                                <li>
                                    <form action="/api/Auth/Logout" method="get" class="dropdown-item p-0">
                                        <button type="submit" class="dropdown-item">登出</button>
                                    </form>


                                </li>
                            </ul>
                        </li>
                    }
                    @* else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">登入</a>
                        </li>
                    } *@
                </ul>
            </div>
        </div>
    </header>
   

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div id="loading-overlay" style="display:none;">
        <div class="spinner"></div>
    </div>
    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2025 - Cars - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
