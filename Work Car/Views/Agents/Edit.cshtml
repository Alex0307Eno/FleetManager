@model Cars.Models.Driver
@{
    ViewData["Title"] = "編輯代理人";
}

<h2 class="mt-3 mb-3">編輯代理人</h2>

<form asp-action="Edit"
      asp-controller="Agents"
      asp-route-id="@Model.DriverId"
      method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="DriverId" />

    @await Html.PartialAsync("_AgentForm", Model)

    <div class="d-flex gap-2 mt-3">
        <button type="submit" class="btn btn-primary">儲存</button>
        <a asp-action="Index" class="btn btn-secondary">返回</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- 把「同戶籍地址」的 JS 放這裡（見上面第 1 點的 script） -->
}
