@{
    ViewData["Title"] = "登入";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg" style="width: 400px; border-radius: 12px;">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-4 fw-bold">🚗 公務車派車系統</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">帳號</label>
                    <input type="text" name="username" class="form-control form-control-lg" placeholder="輸入帳號" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">密碼</label>
                    <input type="password" name="password" class="form-control form-control-lg" placeholder="輸入密碼" required />
                </div>
                <button type="submit" class="btn btn-primary w-100 btn-lg">登入</button>
            </form>
        </div>
        <div class="card-footer text-center text-muted" style="font-size: 13px;">
            &copy; 2025 公務車派車系統
        </div>
    </div>
</div>
