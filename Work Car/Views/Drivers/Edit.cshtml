@model Cars.Models.Driver
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "編輯駕駛員";
}

<h2 class="mt-3 mb-3">編輯駕駛員</h2>

<form asp-action="Edit" asp-controller="Drivers" asp-route-id="@Model.DriverId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="DriverId" />

    @await Html.PartialAsync("_DriverForm", Model)

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">儲存</button>
        <a asp-action="Index" class="btn btn-secondary">返回清單</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
