@model Cars.Models.Driver
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="mb-3">
    <label asp-for="DriverName" class="form-label">姓名 <span class="text-danger">*</span></label>
    <input asp-for="DriverName" class="form-control" required maxlength="50"
           pattern="^[\u4e00-\u9fa5a-zA-Z\s]+$" title="只能輸入中文或英文姓名，最多 50 字" />
    <span asp-validation-for="DriverName" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="NationalId" class="form-label">身分證字號 <span class="text-danger">*</span></label>
    <input asp-for="NationalId" class="form-control" required maxlength="10"
           pattern="^[A-Z][12]\d{8}$" title="身分證字號格式錯誤（例如：A123456789）" />
    <span asp-validation-for="NationalId" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="BirthDate" class="form-label">出生年月日 <span class="text-danger">*</span></label>
    <input asp-for="BirthDate" class="form-control" type="date" required max="@DateTime.Today.ToString("yyyy-MM-dd")" />
    <span asp-validation-for="BirthDate" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="HouseholdAddress" class="form-label">戶籍地址 <span class="text-danger">*</span></label>
    <input asp-for="HouseholdAddress" class="form-control" required maxlength="200" />
    <span asp-validation-for="HouseholdAddress" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="ContactAddress" class="form-label">聯絡地址 <span class="text-danger">*</span></label>
    <input asp-for="ContactAddress" class="form-control" required maxlength="200" />
    <span asp-validation-for="ContactAddress" class="text-danger"></span>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="Phone" class="form-label">市話</label>
        <input asp-for="Phone" class="form-control" maxlength="10"
               pattern="^\d{6,10}$" title="市話必須為 6-10 位數字" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label asp-for="Mobile" class="form-label">行動電話 <span class="text-danger">*</span></label>
        <input asp-for="Mobile" class="form-control" required maxlength="10"
               pattern="^09\d{8}$" title="行動電話必須為 09 開頭的 10 位數字" />
        <span asp-validation-for="Mobile" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="EmergencyContactName" class="form-label">緊急聯絡人 <span class="text-danger">*</span></label>
        <input asp-for="EmergencyContactName" class="form-control" required maxlength="50"
               pattern="^[\u4e00-\u9fa5a-zA-Z\s]+$" title="只能輸入中文或英文姓名，最多 50 字" />
        <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label asp-for="EmergencyContactPhone" class="form-label">緊急聯絡人電話 <span class="text-danger">*</span></label>
        <input asp-for="EmergencyContactPhone" class="form-control" required maxlength="10"
               pattern="^\d{6,10}$" title="電話必須為 6-10 位數字" />
        <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
    </div>
</div>



