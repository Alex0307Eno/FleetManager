@using Microsoft.AspNetCore.Mvc.Rendering
@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper Html

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    Func<string, string, bool> isActive = (ctrl, act) =>
    {
        if (!string.IsNullOrEmpty(act))
            return string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase) &&
                   string.Equals(currentAction, act, StringComparison.OrdinalIgnoreCase);
        return string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase);
    };
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 公務車派車系統</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="topbar navbar navbar-expand-lg navbar-light bg-light shadow-sm sticky-top">
        <div class="container-fluid">
            <!-- 左邊 Logo -->
            <a class="navbar-brand fw-bold text-primary" href="/">公務車派車系統</a>

            <!-- 右邊選單 -->
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <!-- 派車管理 -->
                    <li class="nav-item dropdown">
                        <a class="nav-link " href="/Dispatch/Dispatch">用車申請</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Dispatch/CarApply">派車單</a></li>
                            <li><a class="dropdown-item" href="/Dispatch/Dispatch">派車紀錄</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="nav-link " href="/Dispatch/Record" >派車紀錄</a>
                    </li>

                    <!-- 駕駛人管理 -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">駕駛員管理</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Driver/Schedule">值勤排班</a></li>
                            <li><a class="dropdown-item" href="/Driver/Driver">駕駛員基本資料</a></li>
                            <li><a class="dropdown-item" href="/Driver/Schedule">代理人員</a></li>

                        </ul>
                    </li>

                    <!-- 車輛管理 -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">車輛管理</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Vehicle/Maintenance">車輛維護</a></li>
                            <li><a class="dropdown-item" href="/Vehicle/FuelStats">行車歷程統計</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2025 - Cars - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
