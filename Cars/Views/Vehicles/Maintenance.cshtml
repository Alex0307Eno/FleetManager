@{
    ViewData["Title"] = "車輛維護";
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;600;700&display=swap">
<link href="/css/Vehicle/Maintenance.css" rel="stylesheet" />


<div id="app" class="wrap" v-cloak>
    <div class="topbar">
        <h2 style="margin:0; color:#fff">車輛管理 ＞ 車輛維護</h2>
        <div class="vehicle-info">
            <span class="plate">{{ vehicleDetail.plate || '未選擇車輛' }}</span>
            <span class="status-badge"
                  :class="{
          'is-available': vehicleDetail.status === '可用',
          'is-disabled': vehicleDetail.status === '停用',
          'is-repair': vehicleDetail.status === '維修中'
        }">
                {{ vehicleDetail.status || '—' }}
            </span>
        </div>

    </div>

    <div class="grid">
        <!-- 左：車籍卡 -->
        <section class="card left">
            <div class="card-hd">
                <div class="title">汽車車歷登記卡</div>
                <div class="toolbar">
                    <select v-model="selectedVehicleId" class="select" @@change="onVehicleChanged">
                        <option v-for="v in vehicles" :key="v.vehicleId" :value="v.vehicleId">{{ v.plate }} ({{ v.status }})</option>
                    </select>
                </div>
            </div>

            <div class="card-bd" v-if="!editVehicle">
                <div class="toolbar toolbar-justify">
                    <!-- 左：編輯 / 儲存 / 取消 -->
                    <div class="left-actions" style="display:flex; gap:8px">
                <button class="btn btn-ghost btn-icon"
                        :disabled="!selectedVehicleId"
                        @@click="startEditVehicle">
                    ✏️ <span>編輯</span>
                </button>
                <div class="vehicle-info">
                    <!-- 狀態切換下拉 -->
                            <div class="right-actions">
                    <select v-if="selectedVehicleId"
                            v-model="vehicleDetail.status"
                            @@change="updateVehicleStatus"
                            class="form-select form-select-sm w-auto"
