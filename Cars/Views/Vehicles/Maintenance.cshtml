                    <button class="btn" @@click="cancelEditVehicle">取消</button>
                    <button class="btn btn-primary" @@click="saveVehicle">儲存</button>
                </div>
                <div class="field"><label>來源</label><input v-model="vehicleForm.source" /></div>
                <div class="field"><label>核准文號</label><input v-model="vehicleForm.approvalNo" /></div>
                <div class="field"><label>購置日期</label><input type="date" v-model="vehicleForm.purchaseDate" /></div>
                <div class="field"><label>價值</label><input type="number" v-model.number="vehicleForm.value" /></div>
                <div class="field"><label>里程數</label><input type="number" v-model.number="vehicleForm.odometer" /></div>
                <div class="field"><label>請領牌照日期</label><input type="date" v-model="vehicleForm.licenseDate" /></div>
                <div class="field"><label>開始使用日期</label><input type="date" v-model="vehicleForm.startUseDate" /></div>
                <div class="field"><label>定期檢驗日期</label><input type="date" v-model="vehicleForm.inspectionDate" /></div>
                <div class="field"><label>排氣量</label><input type="number" v-model.number="vehicleForm.engineCC" /></div>
                <div class="field"><label>引擎號碼</label><input v-model="vehicleForm.engineNo" /></div>
                <div class="field"><label>廠牌</label><input v-model="vehicleForm.brand" /></div>
