      // 1) 先依日期「由小到大」(舊→新) 排序，用來正確計算累計
      const asc = [...src].sort((a, b) => {
        const da = a?.date ? new Date(a.date) : null;
        const db = b?.date ? new Date(b.date) : null;
        if (!da && !db) return 0;
        if (!da) return -1;   // 沒日期的排前或排後都可以；這裡排前
        if (!db) return 1;
        return da - db;       // 小到大
      });

      // 2) 在「小→大」序列裡跑累加，確保「日期越大，累計越多」
      let running = 0;
      const withCum = asc.map(m => {
        const qty = Number(m.qty) || 0;
        const amt = Number(m.amount) || 0;
        const subtotal = qty * amt;
        running += subtotal;
        return {
          ...m,
          subtotal,        // 單筆金額
          totalCost: running // 累計金額（到該日期為止）
        };
      });

      // 3) 最後依你想要的顯示順序輸出（通常是「新→舊」）
      const desc = withCum.sort((a, b) => {
        const da = a?.date ? new Date(a.date) : null;
        const db = b?.date ? new Date(b.date) : null;
        if (!da && !db) return 0;
        if (!da) return 1;    // 沒日期的放後面
        if (!db) return -1;
        return db - da;       // 大到小（新→舊）
      });

      return desc;
    });


